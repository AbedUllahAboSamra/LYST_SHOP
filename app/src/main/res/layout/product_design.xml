<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            app:cardBackgroundColor="#E3E3E3"
            app:cardElevation="0dp"
            app:cardCornerRadius="3dp"
            >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F3F3F3"
            app:cardElevation="0dp"
            app:cardCornerRadius="3dp"
            android:layout_margin="8dp"
            >
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                android:src="@drawable/a1" />
        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="2dp"
            >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_priceAfterDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:text="$100"
                android:textColor="#D80000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <ImageView
                android:id="@+id/btn_favoret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_round_favorite_border_24" />
        </LinearLayout>

        <TextView
            android:layout_marginHorizontal="2dp"

            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="ov _ wight asd ksodk asdplm ,aspfdkm ,apsdlm, paslm,aspod psod, apsod, aspd, aspod, "
            android:textColor="#000"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginHorizontal="2dp"

            android:id="@+id/tv_antherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:maxLines="2"
            android:text="ov _ wight asd ksodk asdplm ,aspfdkm ,apsdlm, paslm,aspod psod, apsod, aspd, aspod, "
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>
    >

</FrameLayout>